{
  "name": "dapp-reactjs-hardhat",
  "scripts":{
    "hardhat": "NODE_OPTIONS=--openssl-legacy-provider hardhat",
    "full-install": "npm install && cd app && npm install",
    "sc-accounts": "npm run hardhat -- accounts",
    "sc-compile": "npm run hardhat -- compile",
    "sc-test": "npm run hardhat -- test",
    "sc-localnet": "npm run hardhat -- node",
    "sc-deploy": "npm run sc-compile && npm run hardhat -- run --network localhost scripts/deploy.js",
    "app-start": "cd app && npm start",
    "app-test": "cd app && npm test"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "chai": "^4.3.4",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.2",
    "hardhat": "^2.8.0"
  }
}
